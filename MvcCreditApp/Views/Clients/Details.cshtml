@model MvcCreditApp.Models.Client

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Client</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bids)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Credit Heat</th>
                    <th>Date</th>
                </tr>
                @foreach (var item in Model.Bids)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Credit.Head)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.bidDate)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
